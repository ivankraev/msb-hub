pipeline {

    agent any

    tools {nodejs "nodejs"}

    environment {
        CI = 'true'
    }
    
    stages {
        stage('grant permission'){
            steps {
                sh "chmod +x -R ${env.WORKSPACE}"
            }
        }

        stage('Install dependencies') {
            steps {
                sh 'cd api && npm install'
            }
        }
        stage('Test') {
            steps {
                sh './jenkins/scripts/test.sh'
            }
        }

        stage('docker build image') {
            steps {
                sh 'cd api && docker build -t gsdatabase/api . -f Dockerfile.prod'
            }
        }
        
        stage('Deliver') {
            steps {
                sh 'echo finish'
                sh 'docker images ls'
                sh 'docker image rm gsdatabase/api'
                sh 'docker image ls'
            }
        }

    }
}