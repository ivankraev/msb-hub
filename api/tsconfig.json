{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"]
    },
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "removeComments": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules",
    "build",
    "__tests__",
    "coverage",
    "ecosystem.config.js"
  ]
}
